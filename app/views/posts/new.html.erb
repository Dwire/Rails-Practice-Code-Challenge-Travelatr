<% if flash[:my_sweet_errors] %>
  <% flash[:my_sweet_errors].each do |message| %>
    <p style="color: red;"><%= message %></p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :likes %>
  <%= f.number_field :likes %>

  <%= f.label :destination_id %>
  <%= f.collection_select :destination_id, @destinations, :id, :name %>

  <%= f.label :blogger_id %>
  <%= f.collection_select :blogger_id, @bloggers, :id, :name  %>
  

  <%= f.submit %>
<% end %>