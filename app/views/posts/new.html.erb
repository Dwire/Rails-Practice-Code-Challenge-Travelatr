<h1>New Form</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>


<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :blogger_id %>
  <%= f.collection_select :blogger_id, @bloggers, :id, :name %>

  <%= f.label :destination_id %>
  <%= f.collection_select :destination_id, @destinations, :id, :name %>

  <%= f.submit %>
<% end %>